#!/usr/bin/env bash

#build-image notebook

#docker tag docker-ds-notebook:$USER rappdw/docker-ds:latest

. activate

VERSION=`python -c "import docker_ds; print(docker_ds.__version__)"`

if [[ $VERSION = *"+"* ]]; then
    echo "You must publish from a clean, tagged version. Version: "$VERSION
    exit -1
fi

VERSION=${VERSION:1}
#docker tag docker-ds-notebook:$USER rappdw/docker-ds:$VERSION


docker login
docker push rappdw/docker-ds:latest
docker push rappdw/docker-ds:$VERSION

